html
  background color-background

body
  padding 50px 0
  margin 0
  font 1em/1.5 font-title
  color color-font
  font-weight 300

.wrapper
  width page-width
  margin 0 auto
  border-radius 8px

header, section, footer
  display block

a
  color color-link
  text-decoration none

p
  margin 0 0 20px
  padding 0

strong
  color color-strong
  font-weight 700

.content
  background #FFF
  border-radius 0 0 8px 8px
  border-top 1px solid #fff

.clearfix
  zoom 1

  &:before,
  &:after
    content ""
    display table

  &:after
    clear both
