<article class="<%= item.layout %>">
  <% if (item.photos){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <div class="header">
      <%- partial('post/title') %>
    </div>

    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>

	<% if (index){ %>
		<% if (item.excerpt){ %>
			<a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
		<% } %>
	<% } %>

	<hr/>

	<% if (is_post() == true) { %>
		<nav id="pagination">
			<% if (page.prev){ %>
				<a href="<%- config.root %><%- page.prev.path %>" class="alignleft prev" title="<%- page.prev.title %>"><%- page.prev.title %></a>
			<% } %>
			<% if (page.next){ %>
				<a href="<%- config.root %><%- page.next.path %>" class="alignright next" title="<%- page.next.title %>"><%- page.next.title %></a>
			<% } %>
		</nav>
	<% } %>
  </div>
</article>

<%- partial('comment') %>
