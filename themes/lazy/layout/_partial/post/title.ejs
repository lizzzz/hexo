<% if (item.link){ %>
  <% if (item.title){ %>
    <h3 class="title_link"><a href="<%- item.link %>" target="_blank"><%= item.title %></a>
        <small>
            <time datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format(config.date_format) %></time>
        </small>
    </h3>
  <% } else { %>
    <h3 class="title_link"><a href="<%- item.link %>" target="_blank"><%= item.link %></a>
        <small>
            <time datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format(config.date_format) %></time>
        </small>
    </h3>
  <% } %>
<% } else { %>
  <% if (index){ %>
    <h3 class="title_link"><a href="<%- config.root %><%- item.path %>"><%= item.title %></a>
        <small>
            <time datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format(config.date_format) %></time>
        </small>
    </h3>
  <% } else { %>
    <h3 class="title"><%= item.title %>
        <small>
            <time datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format(config.date_format) %></time>
        </small>
    </h3>
  <% } %>
<% } %>
