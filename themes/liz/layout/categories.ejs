<!-- add new page layout 'categories' -->
<%- partial('_partial/banner', {banner: 'categories'}) %>
<div class="all-tags">
  <div class="layout-title">
    目前共计<span> <%= site.categories.length %><i class="fa fa-paperclip fa-fw"></i></span> 个分类
  </div>
  <div class="layout-wrap-inner">
    <% site.categories.each(function(item){ %>
		<span><a href="<%- config.root %><%- item.path %>"><%= item.name %><span id="upper-length"><%= item.posts.length %></span></a></span>
	<% }); %>
  </div>
</div>
<div class="tags-duoshuo">
	<% if (theme.duoshuo){ %>
		<%- partial('_partial/post/comment', {
		    key: page.layout,
		    title: page.title,
		    url: config.url+url_for(page.path)
		  }) %>
	<% } %>
</div>