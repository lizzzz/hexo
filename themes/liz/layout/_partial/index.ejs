<div class="row">
	<div class="col-md-12">
		<div class="col-md-8">
			<div class="under-navbar">
				<li><i class="icon-th-list"></i> 最新动态</li>
			</div>
			
			<hr>

			<% page.posts.each(function(item){ %>

			<div class="row">

				<div class="col-md-1">
					<div class="side-icon">
						<i class="icon-hand-right icon-2x"></i>
						<div class="angle">
							<i class="icon-double-angle-right"></i>
							<i class="icon-double-angle-right"></i>
						</div>
					</div>
				</div>	

				<div class="col-md-10">
					<article>		
						<!-- title and entry -->
													
						<%- partial('post/title', {item: item, index: index}) %>
						<%- partial('post/entry', {item: item, index: index}) %>
						
					</article>
				</div>

				<div class="col-md-1">
					<div class="article-tag">
						<i class="icon-tags"></i>
						<%- partial('post/tag', {item: item, index: index}) %>
					</div>
				</div>
				
			</div><!-- row -->
			<hr>
			<% }); %>
		</div><!-- col-md-8 -->

		<%- partial('sidebar') %>
	</div><!-- col-md-12 -->
	
</div> <!-- row-fluid -->