<div class="row">
		<% if (item.feature ) { %>
		<div class="col-md-8">
	<% } else { %>
		<div class="col-md-12">
  	<% } %>
	<% if (item.excerpt && index) { %>
  	<%- item.excerpt %>
	<% } else { %>
  		<%- item.content %>
	<% } %>
	</div>
	<% if (item.feature ) { %>
		<div class="col-md-4">
  			<a href="<%- config.root %><%= item.path %>"><img src="<%= config.root %><%= item.feature %>" alt="<%= item.title %>"</a>
  			</div>
		</div>
	<% } %>
</div>

<a class="btn btn-primary" href="#">Read More <i class="icon-double-angle-right"></i></a>

<hr>
