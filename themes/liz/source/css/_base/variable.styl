/* Color */
color-meta = #4D4D4D  /* 标题前竖线&时间*/
color-border = #ddd  /* 代码边框 */
color-link = #0E83CD
color-font = #4D4D4D

/* Font */
font-default = "Open Sans",sans-serif

open-sans-path = 'font/open_sans'
@font-face {
    font-family: 'Open Sans';
    font-style: normal;
    font-weight: 400;
    src: local('Open Sans'), local('OpenSans'), url(open-sans-path.woff) format('woff');
}

font-icon = FontAwesome
font-icon-path = 'font/fontawesome-webfont'
@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight normal
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}


